package player;


public class Player {
String playerName;
   String position;
   Player(String playerName, String position){
    this.position=position;
    this.playerName=playerName;}
    void display()
    {System.out.println("Player Name:"+playerName);
    System.out.println("Player Position:"+position);
    }
    public static void main(String[] args) {
        Player player1=new Player("ANUM","WICKET KEEPER");
        Player player2=new Player("SIDRA","BATSMAN");
        Team team=new Team(player1,player2);
        team.playerinfo();
    }
    
    
}


package player;

public class Team {
    Player player1;
    Player player2;
    Team(Player player1, Player player2) {
        this.player1 = player1;
        this.player2 = player2;
    }
    void addPlayers(Player player1,Player player2)
    {this.player1=player1;
    this.player2=player2;}
    void playerinfo()
            
    {
        System.out.println("Team Players:");
        player1.display();
    player2.display();}
    
}
